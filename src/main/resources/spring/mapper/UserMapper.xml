<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.t4er.user.mapper.UserMapper">

   	<insert id="createUser" parameterType="User">
	insert into member(idx, id, pwd, email, nick, tel, image, stat, indate ,point)
	values(member_seq.nextval, #{id}, #{pwd}, #{email}, #{nick}, #{tel}, null , 0 ,sysdate, 0)
	</insert>
	
   <select id="idCheck" parameterType="string" resultType="int">
   		select idx from member where id = #{id}
   </select>
   
    <select id="emailCheck" parameterType="string" resultType="int">
   		select idx from member where email = #{email}
   </select>
   
   <select id="nickCheck" parameterType="string" resultType="int">
   		select idx from member where nick = #{nick}
   </select>
 
    <select id="telCheck" parameterType="string" resultType="int">
   		select idx from member where tel = #{tel}
   </select>

	<select id="loginCheck" resultType="User" parameterType="hashmap">
	select * from member where id=#{id} and pwd=#{pwd}
	</select>
	
	<update id="statAlter" parameterType="String">
	    update member set stat=1
		where id=#{id}
	</update> 
	
	<!-- 아이디 찾기 -->
	<select id="searchId" resultType="String">
		select id from member
        where nick = #{nick} and email = #{email}
	</select>


	<!-- 회원 상태 조회 -->
	<select id="checkState" resultType="String" parameterType="String">
      select stat from member where id=#{id}
   </select>
   
      <!-- 아이디로 회원정보 가져오기 -->
   <select id="findUser" parameterType="User" resultType="User">
   		select * from member where id=#{id}
   </select>

	<!-- admin -->
	<!--유저 총 카운트 -->
	<select id="totalCount" resultType="int">
		select count(*) cnt from member
	</select>

	<!-- 유저 리스트 -->
	<select id="getUserList" parameterType="hashmap" resultType="User">
		select * from( select a.*,row_number() over(order by idx desc) rn from member a )
		where rn between #{start} and #{end}
	</select>

	<!-- 유저 정보 삭제 -->
	<delete  id="deleteUser" parameterType="string">
		delete from member where idx=#{idx}
	</delete>

	<!-- 유저 정보 가져오기 -->
	<select id="getUser" resultType="User" parameterType="string">
		select * from member where idx=#{idx}
	</select>

	<!-- my mypage-->
	<!-- 마이페이지에서 내정보 불러올때 -->
	<select id="selectMy" resultType="User" parameterType="String">
		select * from member where idx=#{idx}
	</select>

	<!-- 내정보 수정에서 비밀번호 재확인 -->
	<select id="checkPwd" resultType="User" parameterType="String">
		select * from member where idx=#{idx}
	</select>


	<!-- 유저 탈퇴 처리 -->
	<update id="leaveMember" parameterType="String">
		update member set stat=4
		where idx=#{idx}
	</update>

	
</mapper>