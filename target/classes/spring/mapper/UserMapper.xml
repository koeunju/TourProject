<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.t4er.user.mapper.UserMapper">

    <insert id="createUser" parameterType="User">
		insert into member(idx, id, pwd, email, name, tel, indate, point, stat)
		values(member_seq.nextval, #{id}, #{pwd}, #{email}, #{name}, #{tel}, sysdate, 0,1)
	</insert>

    <select id="idCheck" parameterType="string" resultType="int">
   		select idx from member where id = #{id}
   </select>

    <select id="loginCheck" resultType="User" parameterType="hashmap">
		select * from member where id=#{id} and pwd=#{pwd}
	</select>

    <!-- 회원 상태 조회 -->
    <select id="checkState" resultType="String" parameterType="String">
    	select stat from member where id=#{id}
   </select>

    <!-- 아이디로 회원정보 가져오기 -->
    <select id="findUser" parameterType="User" resultType="User">
   		select * from member where id=#{id}
   </select>

    <!-- admin -->
    <!--유저 총 카운트 -->
    <select id="totalCount" resultType="int">
		select count(*) cnt from member
	</select>

    <!-- 유저 리스트 -->
    <select id="getUserList" parameterType="hashmap" resultType="User">
		select * from( select a.*,row_number() over(order by idx desc) rn from member a )
		where rn between #{start} and #{end}
	</select>

    <!-- 유저 정보 삭제 -->
    <delete id="deleteUser" parameterType="string">
		delete from member where idx=#{idx}
	</delete>

    <!-- 유저 정보 수정 --> <!-- 회원상태와 기타 추가 -->
    <update id="updateUser" parameterType="User">
		update member set  pwd=#{pwd},
		email=#{email} , name=#{name}, tel=#{tel}, stat=#{stat,jdbcType=NUMERIC}, point=#{point,jdbcType=NUMERIC}
		where idx=#{idx}
	</update>

    <!-- my mypage-->
    <!-- 마이페이지에서 내정보 불러올때 -->
    <select id="selectMy" resultType="User" parameterType="String">
		select * from member where idx=#{idx,jdbcType=NUMERIC}
	</select>

    <!-- 내정보 수정에서 비밀번호 재확인 -->
    <select id="checkPwd" resultType="User" parameterType="String">
		select * from member where idx=#{idx}
	</select>

    <!-- 유저 탈퇴 처리 -->
    <update id="leaveMember" parameterType="String">
		update member set stat=4
		where idx=#{idx}
	</update>
	
	<!-- 내 포인트 조회 -->
	<select id = "mypoint" parameterType="String" resultType="Point">
		select * from point where idx=${idx,jdbcType=NUMBERIC}
	</select>
	<!-- 회원가입시 포인트 부여 -->
	<insert id = "setPoint" parameterType="String">
		insert into point values(member_seq.nextval,'100',sysdate,1000,1000,#{idx})
	
	</insert>
</mapper>